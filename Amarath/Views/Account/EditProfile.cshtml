@using Amarath.DAL.Models;
@model Amarath.DAL.Models.EditProfileViewModel;
@inject UserManager<IdentityUserExt> userManager;
@{
    ViewData["Title"] = "EditProfile";
    /*Layout = "~/Views/Shared/_Layout.cshtml";*/
}
@{
    var currentUser = await userManager.GetUserAsync(User);
}

<div class="row">
    <div class="col-md-8">
        <h2>Welcome, @User.Identity.Name</h2>
    </div>
    <div class="col-md-4">
        <form method="post" asp-action="Logout" asp-controller="Account">
            <button type="submit" class="btn btn-group-vertical">
                Logout
            </button>
        </form>
    </div>
</div>
<div>
    <h3>Your Account Information</h3>
    <form method="post" asp-action="EditProfile">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username" runat="server"></label>
            <input asp-for="Username" class="form-control" placeholder="@currentUser.UserName" value="@currentUser.UserName" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" runat="server"></label>
            <input asp-for="FirstName" class="form-control" placeholder="@currentUser.FirstName" value="@currentUser.FirstName"/>
        </div>
        <div class="form-group">
            <label asp-for="LastName" runat="server"></label>
            <input asp-for="LastName" class="form-control" placeholder="@currentUser.LastName" value="@currentUser.LastName"/>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress" runat="server"></label>
            <input asp-for="EmailAddress" class="form-control" placeholder="@currentUser.Email" value="@currentUser.Email"/>
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" runat="server"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="Update" />
            <a asp-area="" asp-controller="Account" asp-action="Profile"><button type="submit" class="btn btn-group-vertical">Cancel</button></a>
        </div>
    </form>
</div>


