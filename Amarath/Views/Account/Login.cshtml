@model Amarath.DAL.Models.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f0f0f0;
        background: url(/images/wall_background.png) no-repeat center center fixed;
        background-size: cover;
    }
</style>
<div class="container margin-container">
    <div class="row text-center full-height center-children">
        <div class="col-md-6">
            <div class="login-container login-register-container">
                <form id="login-form" class="center-block" runat="server" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <img src="~/images/headers/login_txt.png" alt="Login"/>
                    <div class="form-group">
                        <label asp-for="Username" runat="server"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" runat="server"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe" runat="server">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>

                        </div>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-default" type="submit" value="Login" />
                    </div>

                </form>
                <div>
                    <p>Please <a asp-area="" asp-controller="Account" asp-action="Register">Register</a> or login to play</p>
                </div>
            </div>
        </div>
    </div>
</div>


