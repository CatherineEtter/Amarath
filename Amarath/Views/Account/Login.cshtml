@model Amarath.DAL.Models.LoginViewModel;
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #1c1e30;
    }
</style>
<div class="row text-center full-height">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="login-container login-register-container col-md-12">
            <form id="login-form" class="center-block" runat="server" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <h2>Login</h2>

                <div class="form-group">
                    <label asp-for="Username" runat="server"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" runat="server"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe" runat="server">
                            <input asp-for="RememberMe"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>

                    </div>
                </div>
                <div class="form-group">
                    <input class="btn btn-default" type="submit" value="Login" />
                </div>

            </form>
        </div>
        <div>
            <p>Please <a asp-area="" asp-controller="Account" asp-action="Register">Register</a> or login to play</p>
        </div>
    </div>
</div>

