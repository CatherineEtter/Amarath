@model IEnumerable<Amarath.Models.Enemy>
@{
    ViewData["Title"] = "Bestiary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f0f0f0;
        background: url(/images/wall_background.png) no-repeat center center fixed;
        background-size: cover;
    }
</style>

<div class="container margin-container">
    <div class="row text-center full-height">
        <div class="center-children">
            <div class="login-register-container">
                <img src="~/images/headers/codex_txt.png" alt="Bestiary" />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                <a asp-action="Codex" asp-route-sortOrder="name">@Html.DisplayNameFor(model => model.Name)</a>
                            </th>
                            <th>
                                <a asp-action="Codex" asp-route-sortOrder="rank">@Html.DisplayNameFor(model => model.Rank)</a>
                            </th>
                            <th>
                                <a asp-action="Codex" asp-route-sortOrder="health">@Html.DisplayNameFor(model => model.Health)</a>
                            </th>
                            <th>
                                <a asp-action="Codex" asp-route-sortOrder="mindamage">@Html.DisplayNameFor(model => model.MinDamage)</a>
                            </th>
                            <th>
                                <a asp-action="Codex" asp-route-sortOrder="maxdamage">@Html.DisplayNameFor(model => model.MaxDamage)</a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rank)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Health)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MinDamage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaxDamage)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>